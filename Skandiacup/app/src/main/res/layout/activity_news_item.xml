<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.skandiacup.splinedevelopment.skandiacup.NewsItemActivity">

    <ImageView
        android:id="@+id/NewsStaticimage"
        android:layout_width="wrap_content"
        android:layout_height="200px"
        android:src="@drawable/newsheader"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Header"
        android:id="@+id/newsItemHeader"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/NewsStaticimage"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Plain text goes here"
        android:id="@+id/newsItemPlainText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/newsItemHeader"
        android:layout_alignEnd="@+id/newsItemHeader"
        android:layout_below="@+id/space"
        android:autoLink="web"/>

    <Space
        android:layout_width="20px"
        android:layout_height="40px"
        android:layout_below="@+id/newsItemHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:id="@+id/space" />

</RelativeLayout>
